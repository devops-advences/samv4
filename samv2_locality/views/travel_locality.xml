<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>


    <record model="ir.ui.view" id="param_list_locality">
      <field name="name">Localite</field>
      <field name="model">travel.locality</field>
      <field name="arch" type="xml">
        <tree>
          <field name="code"/>
          <field name="name"/>
          <field name="active" widget="boolean_toggle"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="param_form_locality">
      <field name="name">Localite form</field>
      <field name="model">travel.locality</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="code" string="Code"/>
                <field name="name" string="Nom"/>
              </group>
              <group>
                <field name="active" string="Active" widget="boolean_toggle"/>
              </group>
            </group>
          </sheet>
        </form>

      </field>
    </record>


    <record model="ir.actions.act_window" id="param_action_window_locality">
      <field name="name">Localités</field>
      <field name="res_model">travel.locality</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->



    <menuitem name="Voyages" id="param_menu_tourisme" parent="base.menu_administration"/>
    <menuitem name="Localités" id="param_menu_locality" parent="param_menu_tourisme" action="param_action_window_locality"/>
  </data>
</odoo>